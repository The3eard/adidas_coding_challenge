{
  "name": "adidas_coding_challenge",
  "version": "1.0.0",
  "description": "NodeJS Coding challenge from Adidas",
  "scripts": {
    "start": "concurrently -n \"public_service,subscription_service,email_service,database\" -c \"red,green,blue,yellow\" \"npm run public_service\" \"npm run subscription_service\" \"npm run email_service\" \"npm run database\"",
    "public_service": "nodemon .\\public_service\\index.js",
    "subscription_service": "nodemon .\\subscription_service\\index.js",
    "email_service": "nodemon .\\email_service\\index.js",
    "database": "json-server --watch ./db/db.json"
  },
  "author": "Adolfo Fuentes",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^9.0.0",
    "json-server": "^0.17.2",
    "moment": "^2.29.4",
    "nodemon": "^2.0.21"
  }
}
